{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext"],
        "strict": true,
        "baseUrl": ".",
        "module": "system",
        "rootDir": "src"
    },
    "tstl": {
        "luaTarget": "JIT",
        "luaBundle": "./dist/main.lua",
        "luaBundleEntry": "./src/main.ts",
        "noImplicitSelf": true,
        "noHeader": true
    },
    "include": [
        "**/*.ts",
    ]
}